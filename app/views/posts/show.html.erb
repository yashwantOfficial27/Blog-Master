
    <div class="container p-5 mb-4 my-4 bg-dark rounded-3 text-light" >
        <div class="container-fluid py-5">
            <h3 class="display-5 fw-bold"><%= @post.title %></h3>
            <p class="small col-md-8 fs-4">Posted <%= time_ago_in_words(@post.created_at) %> ago</p>
            <p class="col-md-8 fs-4"><%= @post.body %></p>
        </div>
    </div>
    <% if user_signed_in? %>
      <div>
        <%= link_to "Edit this post", edit_post_path(@post), class:"btn btn-info mx-2" %> 
        <%= link_to "Back to posts", posts_path, class:"btn btn-info" %>

        <%= button_to "Destroy this post", @post, method: :delete, class:"btn btn-danger my-2" %>
      </div>
    <% end %>
    
